<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Details</title>
    </head>
    <link rel="stylesheet" href="/stylesheets/addTokimon.css">
    <body>
        <div class="box-1">
            <% if (rows != ''){ %>
            <% function name(rows){ return rows; }%>
            <% r = rows.find(name)%>
            <h2>Tokimon collected by <%= r.trainer%></h2>
            <table>
                <thead>
                    <th>Name</th>
                    <th>Weight</th>
                    <th>Height</th>
                    <th>Fly</th>
                    <th>Fight</th>
                    <th>Fire</th>
                    <th>Water</th>
                    <th>Electric</th>
                    <th>Frozen</th>
                    <th>Total</th>
                </thead>
                <tbody>
                    <%rows.forEach(function(r) {%>
                    <tr>
                        <td><%= r.name%></td>
                        <td><%= r.weight%></td>
                        <td><%= r.height%></td>
                        <td><%= r.fly%></td>
                        <td><%= r.fight%></td>
                        <td><%= r.fire%></td>
                        <td><%= r.water%></td>
                        <td><%= r.electric%></td>
                        <td><%= r.frozen%></td>
                        <td><%= r.total%></td>
                    </tr>
                    <%});%>
                </tbody>
            </table>
            <% } else {%>
                <p>Trainer's name is empty. Please input!</p>
            <%}%>
            <table>
            <tr><form action="/home" method="POST">
                    <button type="submit">Home</button>
                </form></tr>
            <tr><form action="/tokimon" method="POST">
                    <button type="submit">Tokimon</button>
                </form></tr>    
            <tr><form action="/trainer" method="POST">
                    <button type="submit">Back To Trainer</button>
                </form></tr>
            </table>
        </div>
    </body>
</html>